<h1>Payment Results</h1>

<dl>
  <dt> APR </dt>
  <dd> <%= @apr.to_s(:percentage, { :precision => 4}) %> </dd>

  <dt> Number of years </dt>
  <dd> <%= @years %> </dd>

  <dt> Principal </dt>
  <dd> <%= @pv.to_s(:currency, { :precision => 2}) %> </dd>

  <dt> Payment </dt>
  <dd> <%= @pmt.to_s(:currency, { :precision => 2}) %> </dd>
</dl>

